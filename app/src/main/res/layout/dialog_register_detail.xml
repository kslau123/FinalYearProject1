<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_register_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luke.finalyearproject.RegisterDetail">

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tableRow1"
        android:layout_alignStart="@+id/tableRow1"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/password"
            android:layout_height="40dp"
            android:text="Password"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtpassword"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:text="123"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/con_password"
            android:layout_height="40dp"
            android:text="Confirm_PW"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtcon_password"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:text="123"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tableRow3"
        android:layout_alignStart="@+id/tableRow3"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/email"
            android:layout_height="40dp"
            android:text="Email"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:text="123"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tableRow4"
        android:layout_alignStart="@+id/tableRow4"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/Contact"
            android:layout_height="40dp"
            android:text="Contact"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtcontact"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:text="123"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/username"
            android:layout_height="40dp"
            android:text="Username"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtusername"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:text="123"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="130dp" />
    </TableRow>

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btnback"
        tools:style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="@android:color/holo_blue_light"
        style="@style/Widget.AppCompat.Button.Colored"
        android:visibility="visible"
        android:layout_below="@+id/tableRow5"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Summit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsummit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/btnback"
        android:layout_alignBottom="@+id/btnback"
        android:layout_toEndOf="@+id/btnback"
        android:layout_marginStart="43dp" />

</RelativeLayout>
